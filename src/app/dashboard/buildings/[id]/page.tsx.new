                    className="md:col-span-2 px-4 py-3 bg-slate-900/50 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none transition"
                  />
                </div>
              </div>

              {/* Structure */}
              <div className="pt-6 border-t border-slate-700">
                <h3 className="text-lg font-bold text-white mb-6 flex items-center gap-3">
                  <div className="w-8 h-8 bg-amber-600 rounded-lg flex items-center justify-center">
                    <Grid3x3 className="w-5 h-5 text-white" />
                  </div>
                  الهيكل الأساسي
                </h3>
                <div className="grid grid-cols-1 md:grid-cols-3 gap-6">
                  <input
                    type="number"
                    placeholder="عدد الأدوار"
                    value={formData.total_floors || ''}
                    onChange={(e) => handleInputChange('total_floors', parseInt(e.target.value))}
                    className="px-4 py-3 bg-slate-900/50 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none transition"
                  />
                  <input
                    type="number"
                    placeholder="عدد الوحدات"
                    value={formData.total_units || ''}
                    onChange={(e) => handleInputChange('total_units', parseInt(e.target.value))}
                    className="px-4 py-3 bg-slate-900/50 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none transition"
                  />
                  <input
                    type="number"
                    placeholder="عدد المصاعد"
                    value={formData.elevators || ''}
                    onChange={(e) => handleInputChange('elevators', parseInt(e.target.value))}
                    className="px-4 py-3 bg-slate-900/50 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none transition"
                  />
                  <input
                    type="number"
                    placeholder="عدد المداخل"
                    value={formData.entrances || ''}
                    onChange={(e) => handleInputChange('entrances', parseInt(e.target.value))}
                    className="px-4 py-3 bg-slate-900/50 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none transition"
                  />
                  <input
                    type="number"
                    placeholder="مواقف السيارات"
                    value={formData.parking_slots || ''}
                    onChange={(e) => handleInputChange('parking_slots', parseInt(e.target.value))}
                    className="px-4 py-3 bg-slate-900/50 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none transition"
                  />
                  <input
                    type="number"
                    placeholder="غرف السائقين"
                    value={formData.driver_rooms || ''}
                    onChange={(e) => handleInputChange('driver_rooms', parseInt(e.target.value))}
                    className="px-4 py-3 bg-slate-900/50 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none transition"
                  />
                </div>
              </div>

              {/* Guard Info */}
              <div className="pt-6 border-t border-slate-700">
                <h3 className="text-lg font-bold text-white mb-6 flex items-center gap-3">
                  <div className="w-8 h-8 bg-orange-600 rounded-lg flex items-center justify-center">
                    <Users className="w-5 h-5 text-white" />
                  </div>
                  معلومات الحارس
                </h3>
                <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <input
                    type="text"
                    placeholder="اسم الحارس"
                    value={formData.guard_name || ''}
                    onChange={(e) => handleInputChange('guard_name', e.target.value)}
                    className="px-4 py-3 bg-slate-900/50 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none transition"
                  />
                  <input
                    type="tel"
                    placeholder="رقم الحارس"
                    value={formData.guard_phone || ''}
                    onChange={(e) => handleInputChange('guard_phone', e.target.value)}
                    className="px-4 py-3 bg-slate-900/50 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none transition"
                  />
                  <input
                    type="text"
                    placeholder="رقم الغرفة"
                    value={formData.guard_room_number || ''}
                    onChange={(e) => handleInputChange('guard_room_number', e.target.value)}
                    className="px-4 py-3 bg-slate-900/50 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none transition"
                  />
                  <input
                    type="text"
                    placeholder="فترة العمل"
                    value={formData.guard_shift || ''}
                    onChange={(e) => handleInputChange('guard_shift', e.target.value)}
                    className="px-4 py-3 bg-slate-900/50 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none transition"
                  />
                  <input
                    type="number"
                    placeholder="الراتب"
                    value={formData.guard_salary_amount || ''}
                    onChange={(e) => handleInputChange('guard_salary_amount', parseInt(e.target.value))}
                    className="px-4 py-3 bg-slate-900/50 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none transition"
                  />
                </div>
              </div>

              {/* Committee Info */}
              <div className="pt-6 border-t border-slate-700">
                <h3 className="text-lg font-bold text-white mb-6 flex items-center gap-3">
                  <div className="w-8 h-8 bg-purple-600 rounded-lg flex items-center justify-center">
                    <Users className="w-5 h-5 text-white" />
                  </div>
                  معلومات لجنة الملاك
                </h3>
                <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <input
                    type="text"
                    placeholder="اسم اللجنة"
                    value={formData.owners_committee_name || ''}
                    onChange={(e) => handleInputChange('owners_committee_name', e.target.value)}
                    className="px-4 py-3 bg-slate-900/50 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none transition"
                  />
                  <input
                    type="text"
                    placeholder="رئيس اللجنة"
                    value={formData.owners_committee_chairman || ''}
                    onChange={(e) => handleInputChange('owners_committee_chairman', e.target.value)}
                    className="px-4 py-3 bg-slate-900/50 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none transition"
                  />
                  <input
                    type="tel"
                    placeholder="هاتف اللجنة"
                    value={formData.owners_committee_phone || ''}
                    onChange={(e) => handleInputChange('owners_committee_phone', e.target.value)}
                    className="px-4 py-3 bg-slate-900/50 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none transition"
                  />
                  <input
                    type="email"
                    placeholder="بريد اللجنة"
                    value={formData.owners_committee_email || ''}
                    onChange={(e) => handleInputChange('owners_committee_email', e.target.value)}
                    className="px-4 py-3 bg-slate-900/50 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none transition"
                  />
                  <input
                    type="text"
                    placeholder="موعد الاجتماعات"
                    value={formData.owners_committee_meeting_schedule || ''}
                    onChange={(e) => handleInputChange('owners_committee_meeting_schedule', e.target.value)}
                    className="md:col-span-2 px-4 py-3 bg-slate-900/50 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none transition"
                  />
                </div>
              </div>
            </div>
          )}
        </div>
      </div>

      {/* Comprehensive Details Modal */}
      {showDetailsModal && (
        <div className="fixed inset-0 z-50 bg-black/60 backdrop-blur-sm flex items-center justify-center p-4" dir="rtl">
          <div className="bg-slate-900 border border-slate-700 rounded-2xl max-w-3xl w-full max-h-[90vh] overflow-y-auto">
            {/* Modal Header */}
            <div className="sticky top-0 z-10 bg-slate-900/95 backdrop-blur border-b border-slate-700 px-6 py-4 flex items-center justify-between">
              <h2 className="text-2xl font-bold text-white">التفاصيل الكاملة للعمارة</h2>
              <button
                onClick={() => setShowDetailsModal(false)}
                className="p-2 hover:bg-slate-800 rounded-lg transition"
              >
                <X className="w-6 h-6 text-white" />
              </button>
            </div>

            {/* Modal Content */}
            <div className="p-6 space-y-6">
              {/* Building Info */}
              <div>
                <h3 className="text-lg font-bold text-white mb-4 flex items-center gap-2">
                  <Building2 className="w-5 h-5 text-indigo-400" />
                  معلومات العمارة
                </h3>
                <div className="grid grid-cols-1 md:grid-cols-2 gap-4 bg-slate-800/50 p-4 rounded-lg">
                  <DetailRow label="اسم العمارة" value={building.name} />
                  <DetailRow label="رقم القطعة" value={building.plot_number} />
                  <DetailRow label="الحي" value={building.neighborhood} />
                  <DetailRow label="سنة البناء" value={building.year_built} />
                  <DetailRow label="نوع الشارع" value={building.street_type} />
                  <DetailRow label="اتجاه العمارة" value={building.building_facing} />
                  <DetailRow label="رقم الهاتف" value={building.phone} />
                  {building.description && <DetailRow label="الوصف" value={building.description} />}
                </div>
              </div>

              {/* Structure */}
              <div>
                <h3 className="text-lg font-bold text-white mb-4 flex items-center gap-2">
                  <Grid3x3 className="w-5 h-5 text-amber-400" />
                  الهيكل الأساسي
                </h3>
                <div className="grid grid-cols-2 md:grid-cols-3 gap-4 bg-slate-800/50 p-4 rounded-lg">
                  <DetailRow label="الأدوار" value={building.total_floors} />
                  <DetailRow label="الوحدات" value={building.total_units} />
                  <DetailRow label="المصاعد" value={building.elevators} />
                  <DetailRow label="المداخل" value={building.entrances} />
                  <DetailRow label="مواقف السيارات" value={building.parking_slots} />
                  <DetailRow label="غرف السائقين" value={building.driver_rooms} />
                </div>
              </div>

              {/* Guard Info */}
              {building.guard_name && (
                <div>
                  <h3 className="text-lg font-bold text-white mb-4 flex items-center gap-2">
                    <Users className="w-5 h-5 text-orange-400" />
                    معلومات الحارس
                  </h3>
                  <div className="grid grid-cols-1 md:grid-cols-2 gap-4 bg-slate-800/50 p-4 rounded-lg">
                    <DetailRow label="الاسم" value={building.guard_name} />
                    <DetailRow label="الهاتف" value={building.guard_phone} />
                    <DetailRow label="رقم الغرفة" value={building.guard_room_number} />
                    <DetailRow label="فترة العمل" value={building.guard_shift} />
                    <DetailRow label="الراتب" value={building.guard_salary_amount} />
                  </div>
                </div>
              )}

              {/* Committee Info */}
              {building.owners_committee_name && (
                <div>
                  <h3 className="text-lg font-bold text-white mb-4 flex items-center gap-2">
                    <Users className="w-5 h-5 text-purple-400" />
                    لجنة الملاك
                  </h3>
                  <div className="grid grid-cols-1 md:grid-cols-2 gap-4 bg-slate-800/50 p-4 rounded-lg">
                    <DetailRow label="اسم اللجنة" value={building.owners_committee_name} />
                    <DetailRow label="الرئيس" value={building.owners_committee_chairman} />
                    <DetailRow label="الهاتف" value={building.owners_committee_phone} />
                    <DetailRow label="البريد" value={building.owners_committee_email} />
                    <DetailRow label="مواعيد الاجتماعات" value={building.owners_committee_meeting_schedule} />
                  </div>
                </div>
              )}

              {/* Owner Association */}
              {building.owner_association?.hasAssociation && (
                <div>
                  <h3 className="text-lg font-bold text-white mb-4 flex items-center gap-2">
                    <Users className="w-5 h-5 text-green-400" />
                    جمعية الملاك
                  </h3>
                  <div className="grid grid-cols-1 md:grid-cols-2 gap-4 bg-slate-800/50 p-4 rounded-lg">
                    <DetailRow label="المدير" value={building.owner_association.managerName} />
                    <DetailRow label="رقم التسجيل" value={building.owner_association.registrationNumber} />
                    <DetailRow label="عدد الوحدات" value={building.owner_association.registeredUnitsCount} />
                    <DetailRow label="الرسم الشهري" value={`${building.owner_association.monthlyFee} ر.س`} />
                    <DetailRow label="رقم التواصل" value={building.owner_association.contactNumber} />
                    <DetailRow label="الآيبان" value={building.owner_association.iban} />
                    <DetailRow label="رقم الحساب" value={building.owner_association.accountNumber} />
                  </div>
                </div>
              )}

              {/* Links */}
              {building.google_maps_link && (
                <div>
                  <a
                    href={building.google_maps_link}
                    target="_blank"
                    rel="noopener noreferrer"
                    className="inline-flex items-center gap-2 px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg transition"
                  >
                    <MapPin className="w-4 h-4" />
                    فتح الموقع على الخريطة
                  </a>
                </div>
              )}
            </div>

            {/* Modal Footer */}
            <div className="sticky bottom-0 bg-slate-900/95 backdrop-blur border-t border-slate-700 px-6 py-4 flex justify-end gap-3">
              <button
                onClick={() => setShowDetailsModal(false)}
                className="px-6 py-2 bg-slate-800 hover:bg-slate-700 text-white rounded-lg transition"
              >
                إغلاق
              </button>
              <button
                onClick={() => window.print()}
                className="px-6 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg transition flex items-center gap-2"
              >
                <Printer className="w-4 h-4" />
                طباعة
              </button>
            </div>
          </div>
        </div>
      )}
    </div>
  )
}

// Helper Component
function DetailRow({ label, value }: { label: string; value: any }) {
  if (!value && value !== 0) return null
  
  return (
    <div>
      <p className="text-slate-400 text-sm mb-1">{label}</p>
      <p className="text-white font-semibold">{value}</p>
    </div>
  )
}
